<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="#eeeeee">

    <!-- 타이틀바 -->
    <LinearLayout
        android:id="@+id/pop_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/gmts_blue"
            android:gravity="center"
            android:text="필터검색"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <RelativeLayout
        android:layout_below="@+id/pop_title"
        android:layout_width="match_parent"
        android:layout_height="393dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:textSize="25dp"
                    android:text="지역"
                    android:textColor="@color/gmts_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">

                    <CheckBox
                        android:id="@+id/area1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="강원도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>

                    <CheckBox
                        android:id="@+id/area2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서울광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="경기도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="세종특별자치시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="경상남도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="광주광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="경상북도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="대구광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전라남도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="부산광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전라북도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="울산광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">
                    <CheckBox
                        android:id="@+id/area13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="충청남도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="인천광역시"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/area15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="충청북도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                    <CheckBox
                        android:id="@+id/area16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="제주특별자치도"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>
                </LinearLayout>

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/area17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textColor="#000000"
                    android:button="@drawable/custom_checkbox"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:text="강좌 시작/종료 날짜"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/gmts_blue"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/coures_start_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="강좌시작일"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/course_start_date_textview"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/coures_start_view"
                        android:background="#ffffff"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/course_start_date_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/course_start_date_textview"
                        android:background="@drawable/btn_round"
                        android:onClick="Course_date"
                        android:src="@drawable/ic_baseline_calendar_month_24" />
                    <Button
                        android:layout_marginLeft="3dp"
                        android:id="@+id/calendar_cancel_btn1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Course_date"
                        android:textSize="10dp"
                        android:text="초기화"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_round"
                        android:layout_toRightOf="@+id/course_start_date_button"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/coures_end_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="강좌종료일"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/course_end_date_textview"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/coures_end_view"
                        android:background="#ffffff"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <ImageButton
                        android:layout_marginLeft="4dp"
                        android:id="@+id/course_end_date_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Course_date"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_round"
                        android:src="@drawable/ic_baseline_calendar_month_24"
                        android:layout_toRightOf="@+id/course_end_date_textview" />
                    <Button
                        android:layout_marginLeft="3dp"
                        android:id="@+id/calendar_cancel_btn2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Course_date"
                        android:textSize="10dp"
                        android:text="초기화"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_round"
                        android:layout_toRightOf="@+id/course_end_date_button"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:text="수강료"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/gmts_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/tuition1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="유료"
                        android:textColor="#000000"
                        android:button="@drawable/custom_checkbox"/>

                    <CheckBox
                        android:id="@+id/tuition2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/custom_checkbox"
                        android:text="무료"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
    <!-- Notice -->


    <View
        android:layout_above="@id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:id="@+id/ok_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_close_button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="확인"
            android:background="@color/gmts_blue"
            android:textColor="#FFFFFF"
            android:textSize="19dp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</RelativeLayout>